<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Assigment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="Tugas"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/tugas"/>
    <ImageView
        android:id="@+id/arah"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/arah"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="270dp"
        android:text="KIRIM"
        android:id="@+id/kirim"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="---------------------------------------------"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/garis6"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:text="Bahasa Inggris"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/textbhs"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:text="Berakhir pada Besok 12.59 PM"
        android:textSize="14dp"
        android:textColor="#000000"
        android:id="@+id/textber"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="---------------------------------------------"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/garis2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        android:text="Yang mengumpulkan"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/textyg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="185dp"
        android:text="Intruksi"
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/textins"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="270dp"
        android:text="Komentar"
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/textkom"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="---------------------------------------------"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/garis3"/>
    <EditText
        android:id="@+id/ksandi"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="200dp"
        android:hint="  Ketikkan jawaban"
        android:textColorHint="#FFC0C0C0"
        android:inputType="text"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:text="Sisipkan"
        android:id="@+id/sisipkan"/>

</RelativeLayout>