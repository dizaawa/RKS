<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".SignUp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="edmodo"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/texted"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Daftar Edmodo"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/textdaf"/>
    <ImageView
        android:id="@+id/arah"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/arah"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Daftar Dengan Google"
        android:id="@+id/daftar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="---------- ATAU ----------"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="#000000"
        android:id="@+id/textat"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:hint="  Nama Pengguna"
        android:textColorHint="#FFC0C0C0"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="@drawable/sborder"/>
    <EditText
        android:id="@+id/ksandi"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:hint="  Kata Sandi"
        android:textColorHint="#FFC0C0C0"
        android:inputType="text"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/sborder"/>
    <EditText
        android:id="@+id/konfr"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:hint="  Masukkan Ulang Kata Sandi"
        android:textColorHint="#FFC0C0C0"
        android:inputType="text"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/sborder"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:text="Buat Akun"
        android:id="@+id/buat"/>

</RelativeLayout>